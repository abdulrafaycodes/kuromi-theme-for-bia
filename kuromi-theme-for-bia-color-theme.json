{
    "name": "Kuromi Theme for Bia",
    "type": "dark",
    "colors": {
        "editor.background": "#231927",
        "editor.foreground": "#cac5ed",
        "editorLineNumber.foreground": "#6d4adf",
        "editorCursor.foreground": "#E77ED0",
        "editor.selectionBackground": "#645080",
        "editor.inactiveSelectionBackground": "#434144AA",
        "editor.lineHighlightBackground": "#434144",
        "editor.findMatchHighlightBackground": "#E77ED0AA",
        "editorBracketMatch.border": "#914186",
        "editorWhitespace.foreground": "#51428355",
        "activityBar.background": "#514283",
        "activityBar.foreground": "#cac5ed",
        "activityBar.activeBackground": "#434144",
        "activityBar.activeBorder": "#E77ED0",
        "sideBar.background": "#2b1f30",
        "sideBar.foreground": "#cac5ed",
        "sideBarTitle.foreground": "#E77ED0",
        "sideBarSectionHeader.background": "#3C353D",
        "statusBar.background": "#514283",
        "statusBar.foreground": "#cac5ed",
        "statusBar.debuggingBackground": "#914186",
        "statusBar.noFolderBackground": "#2D2730",
        "titleBar.activeBackground": "#281F29",
        "titleBar.inactiveBackground": "#2A242C",
        "titleBar.activeForeground": "#cac5ed",
        "tab.activeBackground": "#372741",
        "tab.inactiveBackground": "#473253",
        "tab.border": "#434144"
    },
    "tokenColors": [
        {
            "scope": ["comment", "punctuation.definition.comment"],
            "settings": {
                "foreground": "#8470c4",
                "fontStyle": "italic"
            }
        },
        {
            "scope": ["string", "constant.other.symbol"],
            "settings": {
                "foreground": "#E77ED0"
            }
        },
        {
            "scope": ["variable", "variable.parameter", "variable.language"],
            "settings": {
                "foreground": "#dfcff3"
            }
        },
        {
            "scope": ["keyword", "storage.type"],
            "settings": {
                "foreground": "#9b92da",
                "fontStyle": "bold"
            }
        },
        {
            "scope": ["entity.name.function", "support.function"],
            "settings": {
                "foreground": "#f0c3e2"
            }
        },
        {
            "scope": ["entity.name.tag", "support.type"],
            "settings": {
                "foreground": "#E77ED0"
            }
        },
        {
            "scope": ["constant.numeric", "constant.language"],
            "settings": {
                "foreground": "#ed1ddf3d"
            }
        },
        {
            "scope": ["entity.other.attribute-name", "meta.tag"],
            "settings": {
                "foreground": "#cac5ed"
            }
        },
        {
            "scope": ["meta.function-call", "meta.method-call"],
            "settings": {
                "foreground": "#f0c3e2"
            }
        },
        {
            "scope": ["punctuation.definition.tag", "punctuation.definition.string"],
            "settings": {
                "foreground": "#6d4adf"
            }
        },
        {
            "scope": ["storage.modifier", "keyword.operator"],
            "settings": {
                "foreground": "#914186"
            }
        },
        {
            "scope": ["invalid", "invalid.deprecated"],
            "settings": {
                "foreground": "#ff3333",
                "background": "#434144"
            }
        },
        {
            "scope": ["markup.bold", "markup.heading"],
            "settings": {
                "foreground": "#914186",
                "fontStyle": "bold"
            }
        },
        {
            "scope": ["markup.italic"],
            "settings": {
                "foreground": "#cac5ed",
                "fontStyle": "italic"
            }
        },
        {
            "scope": ["entity.name.class", "entity.name.type.class"],
            "settings": {
                "foreground": "#914186"  // Dark purple for classes
            }
        },
        {
            "scope": ["entity.name.type", "support.class"],
            "settings": {
                "foreground": "#E77ED0"  // Bright pink for types and interfaces
            }
        },
        {
            "scope": ["storage.type.function", "entity.name.function"],
            "settings": {
                "foreground": "#f0c3e2"  // Light purple for function declarations
            }
        },
        {
            "scope": ["variable.other.constant", "variable.other.enummember"], 
            "settings": {
                "foreground": "#cac5ed" // Light lavender for constants and enum members
            }
        },
        {
            "scope": ["support.function.builtin", "support.function.magic"], 
            "settings": {
                "foreground": "#6d4adf" // Bright pink for built-in functions (e.g., Python's built-ins)
            }
        },
        {
            "scope": ["support.constant.property-value", "constant.language.boolean", "constant.language.null"],
            "settings": {
                "foreground": "#ed1ddf3d" // Bright pinkish-red for boolean, null, and other constants
            }
        },
        {
            "scope": ["meta.function-call.python", "meta.function-call.generic"], 
            "settings": {
                "foreground": "#f0c3e2" // Light purple for Python function calls
            }
        },
        {
            "scope": ["entity.name.type.class.python", "meta.class.python"],
            "settings": {
                "foreground": "#914186" // Dark purple for Python class names
            }
        },
        {
            "scope": ["meta.import.python", "keyword.control.import"],
            "settings": {
                "foreground": "#6d4adf" // Bluish-purple for import statements
            }
        },
        {
            "scope": ["entity.name.type.module", "support.module.python"], 
            "settings": {
                "foreground": "#cac5ed" // Light lavender for module names in import statements
            }
        }        
    ]
}
